<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/images/favicon-32x32.png">
        <title>IP Address Tracker</title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
        <script src="/script.js"></script>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Genos:wght@200;300;400;500&display=swap" rel="stylesheet">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Arima:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Overlock+SC&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
        <div id="img-bg">
            <h1>IP ADDRESS TRACKER</h1>
            <div id="address-div">
                <input type="text" name="address" id="address" placeholder="Enter IP address">
                <div id="enter">
                    <i class="fa-solid fa-angle-right"></i>
                </div>
            </div>
            <div id="result">
                <div>
                    <h2>IP ADDRESS</h2>
                    <p><%= address %></p>
                </div>
                <div>
                    <h2>LOCATION</h2>
                    <p><%= country %>, <%= region %></p>
                </div>
                <div>
                    <h2>TIMEZONE</h2>
                    <p><%= timezone %> <%= time %></p>
                </div>
                <div id="last">
                    <h2>ISP</h2>
                    <p><%= isp %></p>
                </div>
            </div>
        </div>
        <div id="map"></div>

        <!-- hidden elements to store latitude and longitude because EJS cannot be used in javascript code file -->
        <input type="hidden" id="latitude" value="<%= latitude %>">
        <input type="hidden" id="longitude" value="<%= longitude %>">

        <script>
            // Access latitude and longitude from hidden elements
            var latitude = document.getElementById('latitude').value;
            var longitude = document.getElementById('longitude').value;

            var mymap = L.map('map').setView([latitude, longitude], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {}).addTo(mymap);
            var marker = L.marker([latitude, longitude]).addTo(mymap);
            marker.bindPopup("<b>Marker Location:</b><br>Latitude: " + latitude.toFixed(6) + "<br>Longitude: " + longitude.toFixed(6)).openPopup();
        </script>
    </body>
</html>